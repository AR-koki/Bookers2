<div class='container'>
  <div class='row'>
  </div>
  <div class='row'>
    <%= render 'books/user', user: @user, book: @book %>
    <div class="col-xs-9">
      <h2>Users</h2>
      <div class="row">
        <div>
          <div class="col-lg-4">image</div>
          <div class="col-lg-4">name</div>
          <div class="col-lg-4"></div>
        </div>
      </div>
      <div class="row">
        <% @users.each do |user| %>
          <div class="row">
            <div class="mybook">
              <div class="col-lg-4">
                <%= link_to user_path(user.id) do %>
                  <%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg" %>
                <% end %>
              </div>
              <div class="col-lg-4"><%= user.name %></div>
              <div class="col-lg-4"><%= link_to "Show", user_path(user.id) %></div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>