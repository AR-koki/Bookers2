<div class='container'>
  <div class='row'>
  </div>
  <div class='row'>
    <div class="col-xs-3">
      <div class='row'>
        <h2>User info</h2>
        <%= attachment_image_tag current_user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg" %>
      </div>
      <div class='row'>
        <div class='name'>
          <div class='col-lg-6'>name</div>
          <div class='col-lg-6'><%= current_user.name %></div>
        </div>
      </div>
      <div class='row'>
        <div class='introduction'>
          <p>introduction</p>
        </div>
        <p><%= current_user.introduction %></p>
          <%= link_to "プロフィール編集", edit_user_path(current_user.id), class: "btn btn-default w-100" %>
      </div>
      <!-- NEW BOOK -->
      <h2>New book</h2>
      <%= form_for(@book) do |f| %>
      <div class="row">
        <h5>Title</h5>
        <%= f.text_field :title, class: "text" %>
        <h5>Opinion</h5>
        <%= f.text_area :body, class: "text" %>
      </div>
      <div class="row">
        <%= f.submit 'Create Book', class: "btn btn-primary" %>
      </div>
      <% end %>
      <!-- ここまで -->
    </div>
    <div class="col-xs-9">
      <h2>Users</h2>
      <div class="row">
        <div>
          <div class="col-lg-4">image</div>
          <div class="col-lg-4">name</div>
          <div class="col-lg-4"></div>
        </div>
      </div>
      <div class="row">
        <% @users.each do |user| %>
          <div class="row">
            <div class="mybook">
              <div class="col-lg-4"><%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg" %></div>
              <div class="col-lg-4"><%= user.name %></div>
              <div class="col-lg-4"><%= link_to "Show", user_path(user.id) %></div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>