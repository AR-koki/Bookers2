<div class='container'>
  <div class="row">
  <% if flash[:notice] %>
    <p><%= flash[:notice] %></p>
  <% end %>
  </div>
  <div class='row'>
  </div>
  <div class='row'>
    <div class="col-xs-3">
      <div class='row'>
        <h2>User info</h2>
        <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg" %>
      </div>
      <div class='row'>
        <div class='name'>
          <div class='col-lg-6'>name</div>
          <div class='col-lg-6'><%= @user.name %></div>
        </div>
      </div>
      <div class='row'>
        <div class='introduction'>
          <p>introduction</p>
        </div>
        <p><%= @user.introduction %></p>
        <% if @user.id == current_user.id %>
          <%= link_to "プロフィール編集", edit_user_path(@user), class: "btn btn-default w-100" %>
        <% end %>
      </div>
      <!-- NEW BOOK -->
      <h2>New book</h2>
      <%= form_for(@book) do |f| %>
      <div class="row">
        <h5>Title</h5>
        <%= f.text_field :title, class: "text" %>
        <h5>Opinion</h5>
        <%= f.text_area :body, class: "text" %>
      </div>
      <div class="row">
        <%= f.submit 'Create Book', class: "btn btn-primary" %>
      </div>
      <% end %>
      <!-- ここまで -->
    </div>
    <div class="col-xs-9">
      <h2>Books</h2>
      <div class="row">
        <div>
          <div class="col-lg-4"></div>
          <div class="col-lg-4">Title</div>
          <div class="col-lg-4">Opinion</div>
        </div>
      </div>
      <div class="row">
        <% @books.each do |book| %>
          <div class="row">
            <div class="mybook">
              <div class="col-lg-4"><%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg" %></div>
              <div class="col-lg-4"><%= link_to book.title, "/books/#{book.id}" %></div>
              <div class="col-lg-4"><%= book.body %></div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>