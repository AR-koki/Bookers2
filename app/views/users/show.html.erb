<div class='container'>
  <div class='row'>
  </div>
  <div class='row'>
    <div class="col-lg-4">
      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
      <div>
        <p>name</p>
        <p><%= current_user.name %></p>
      </div>
      <div>
        <p>introduction</p>
        <p><%= @user.introduction %></p>
        <% if @user.id == current_user.id %>
          <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
        <% end %>
      </div>
      <!-- NEW BOOK -->
      <h2>New book</h2>
      <%= form_for(@book) do |f| %>
        <p>title</p>
        <%= f.text_field :title %>
        <p>opinion</p>
        <%= f.text_area :body %>
        <%= f.submit 'Create Book' %>
      <% end %>
      <!-- ここまで -->
    </div>
    <div class="col-lg-8">
      <h2>Books</h2>
      <table class="table table-striped">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>
              <td><%= link_to book.title, "/books/#{book.id}" %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>