<div class="container">
	<h2 class="row">Editing Book</div>
	<div class="row center-block">
		<%= form_for(@book) do |f| %>
			<% if @book.errors.any? %>
				<div id="error_explanation">
					<h2><%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:</h2>

					<ul>
						<% @book.errors.full_messages.each do |message| %>
							<li><%= message %></li>
						<% end %>
					</ul>
				</div>
				<div>
					<p>Title</p>
					<%= f.text_field :title %>
					<p>Opinion</p>
					<%= f.text_area :body %>
				</div>
				<%= f.submit 'Update Book' %>
			<% else %>
				<div>
					<p>Title</p>
					<%= f.text_field :title %>
					<p>Opinion</p>
					<%= f.text_area :body %>
				</div>
				<%= f.submit 'Update Book' %>
			<% end %>
		<% end %>
		<%= link_to "show","/books/#{@book.id}" %><span>|</span><%= link_to "Back", "/books" %>
	</div>
</div>
