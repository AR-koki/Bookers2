<div class='container'>
  <div class='row'>
    <% if @book.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@book.errors.count, "error") %> errors prohibited this obj from being saved:</h2>

        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
  <div class='row'>
    <%= render 'books/user', user: @user, book: @book %>
    <div class="col-xs-9">
      <h2>Books</h2>
      <div class="row">
        <div>
          <div class="col-lg-4"></div>
          <div class="col-lg-4">Title</div>
          <div class="col-lg-4">Opinion</div>
        </div>
      </div>
      <div class="row">
        <% @books.each do |book| %>
          <div class="row">
            <div class="mybook">
              <div class="col-lg-4">
                <%= link_to user_path(book.user.id) do %>
                  <%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg" %>
                <% end %>
              </div>
              <div class="col-lg-4"><%= link_to book.title, "/books/#{book.id}" %></div>
              <div class="col-lg-4"><%= book.body %></div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>