<div class="row">
	<% if flash[:notice] %>
		<p><%= flash[:notice] %></p>
	<% end %>
</div>
<div class="row">
	<div class="col-lg-4">
      <h2>User info</h2>
      <%= image_tag('no_image.jpg') %>
      <div>
        <p>name</p>
        <p><%= current_user.name %></p>
      </div>
      <div>
        <p>introduction</p>
      </div>
      <a href="#">設定</a>
      <!-- NEW BOOK -->
      <h2>New book</h2>
      <%= form_for(@book) do |f| %>
        <p>title</p>
        <%= f.text_field :title %>
        <p>opinion</p>
        <%= f.text_area :body %>
        <%= f.submit 'Create Book' %>
      <% end %>
      <!-- ここまで -->
    </div>
    <div class="col-lg-8">
    	<tr>
    		<td></td>
    		<td><%= @book.title %></td>
    		<td><%= @book.body %></td>
    		<td><%= link_to "Edit", edit_book_path(@book) %></td>
    		<td><%= link_to "Destroy", "/books/#{@book.id}", method: :delete %></td>
    	</tr>
    </div>
</div>